// REVIEW
model Review {
  id         String   @id @default(uuid())
  rating     Int      // 1 to 5
  comment    String?
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  medicineId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([medicineId])
  @@map("reviews")
}
